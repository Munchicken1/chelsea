<!-- start product -->
<div id="product">
    <div class="container centered">
      <div class="row">
        <div class="col-md-12">
          <h2 class="wow bounce">Products</h2>
          <hr>
          <% @items.each do |product| %>
            <div class="col-lg-3 col-md-4 col-sm-6 wow fadeIn" data-wow-delay="0.3s">

              <%= link_to image_tag(product.img_url, class: "item-list", alt: "product img"), item_path(product) %>

            </div>
          <% end %>
        </div>
      </div>
      <div class="pagination">
        <%= will_paginate @items %>
      </div>
    </div>
</div>
