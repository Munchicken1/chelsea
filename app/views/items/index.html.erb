<!-- start product -->
<div id="product">
    <div class="container centered">
      <div class="row">
        <div class="col-md-12">
          <h2 class="wow bounce">Products</h2>


        <div class="wrap">
          <%= form_tag items_path, :class => "search", :method => 'get' do %>
          <p style="text-align: right;">
            <%= text_field_tag :search, params[:search], :placeholder => "Search", :class => "searchTerm" %>
            <%#<%= button_tag(type: "submit", class: "searchButton", name: nil) do %>
              <!-- <i class="fa fa-search"></i> -->
            <%#<% end %>
            <button type="submit" class='searchButton'>
              <i class="fa fa-search"></i>
            </button>
          </p>
          <% end %>
        </div>
          <hr>
          <% @items.each do |product| %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 wow fadeIn" data-wow-delay="0.1s">

              <%= link_to image_tag(product.img_url, class: "item-list", alt: "product img"), item_path(product) %>
              <%# <% if product.condition == "new" %>
                <!-- <span class="badge btn-success" style="background-color: #02ac91">New</span> -->
              <%# <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="pagination">
        <%= will_paginate @items %>
      </div>
    </div>
</div>
